# --- Gmail setup ---
SMTP_PROVIDER=gmail

# Option A: STARTTLS on 587 (recommended)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_TLS=true
SMTP_SSL=false

# Option B: SSL on 465 (uncomment this block and comment Option A if you prefer)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=465
# SMTP_TLS=false
# SMTP_SSL=true

# Auth (must be your Gmail + App Password)
SMTP_USER=sender@example.com
SMTP_PASS=

# Sender and recipient
EMAIL_FROM=sender@example.com   # should match SMTP_USER for Gmail
EMAIL_TO=alerts@example.com